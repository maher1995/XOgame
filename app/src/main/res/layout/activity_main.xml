<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b1"
        android:enabled="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:layout_above="@+id/b4"
        android:layout_toStartOf="@+id/b2"
        android:textSize="24sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b2"
        android:enabled="true"
        android:layout_alignTop="@+id/b1"
        android:layout_centerHorizontal="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b3"
        android:enabled="true"
        android:layout_alignBottom="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b4"
        android:enabled="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:layout_alignTop="@+id/b5"
        android:layout_toStartOf="@+id/b5"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b5"
        android:enabled="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:layout_above="@+id/b8"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b6"
        android:enabled="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:layout_alignTop="@+id/b5"
        android:layout_alignEnd="@+id/textView"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b7"
        android:enabled="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="47dp"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b8"
        android:enabled="true"
        android:layout_alignTop="@+id/b7"
        android:layout_centerHorizontal="true"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b9"
        android:enabled="true"
        android:layout_alignTop="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:onClick="OnClick"
        android:textColor="#f40f0f"
        android:textSize="24sp"
        android:clickable="false"
        android:visibility="visible" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#12eb0e"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:textColor="#1140e7"
        android:textSize="20sp"
        android:text="X---O Game"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/b1" />
</RelativeLayout>
